
<div class="container">
		<div class="row">

				<div class="col-xs-3">
				<%= render 'users/show' , user:@user, book_new:@book %>
				</div>
			<div class="col-xs-9">
		     <h2>Books</h2>
				<table class="table table-hover table-inverse">
			    <thead>
			        <tr> 
			          <th></th>
			          <th>Title</th>
			          <th>Opinion</th>
			          <th colspan="3"></th>
			        </tr>
				</thead>
					<tbody>
						<% @books.each do |book| %>
								<tr>
									<td><%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback:'no_image.png', size: '50x50' %>
									</td>
										<td class="link"><%= link_to book.title, book_path(book.id)%>
										</td>
								<td><%= book.body %></td>
								</tr>
						<% end %>
					</tbody>
			    </table>
			</div>
		</div>
</div>

