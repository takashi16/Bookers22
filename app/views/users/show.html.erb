

  	<div class="body">
      <div class="container">
        <p id="notice"></p>
      	<div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
          <div><%= attachment_image_tag @user, :image, format: 'jpeg',fallback:'no_image.png'  ,size: '100x100' %></div>
          
          <table class="table">
            <tbody>
            <tr>
          	  <th>name</th>
          	  <th><%=@user.name%></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%= @user.introduction %></th>
            </tr>
          </tbody>
      </table>

      <div class="row">
        <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>

      <h2>New book</h2>
          <%= form_for(@book_new) do |f| %>
          <div class="field row">
              <h4> Title </h4>
              <%= f.text_field :title, class: "col-xs-12"%>
          </div>
          <div class="field row">
              <h4> Opinion </h4>
              
              <% if @book1.errors.any? %><% @book1.errors.full_messages.each do |message| %><li style="color: red"><%= message %></li>
              <% end %>
              <% end %>
              <%= f.text_area :body, class: "col-xs-12" %>
          </div>
          <div class="field action row">
              <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
          </div>
          <% end %>
    </div>

    
  <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :image, :fill, 50, 50, format: 'jpeg', fallback:'no_image.png', size: '50x50' %>
            </td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
